{
  "version": 2,
  "routes": [
    /* --- 정적 asset 라우트 추가 (중요) --- */
    { "src": "/admin/assets/(.*)", "dest": "/src/admin/assets/$1" },
    { "src": "/order/assets/(.*)", "dest": "/src/order/assets/$1" },

    /* --- 기존 페이지 라우트들 --- */
    { "src": "/", "dest": "/src/public/index.html" },
    { "src": "/login", "dest": "/src/public/login.html" },

    { "src": "/admin", "dest": "/src/admin/index.html" },
    { "src": "/admin/login", "dest": "/src/admin/login.html" },
    { "src": "/admin/orders", "dest": "/src/admin/orders.html" },
    { "src": "/admin/store-admin", "dest": "/src/public/index.html" },

    { "src": "/order/select", "dest": "/src/order/select.html" },
    { "src": "/order/store", "dest": "/src/order/store.html" },
    { "src": "/order/delivery", "dest": "/src/order/delivery.html" },
    { "src": "/order/delivery-entry", "dest": "/src/order/delivery-entry.html" },
    { "src": "/order/delivery-guest", "dest": "/src/order/delivery-guest.html" },
    { "src": "/order/login", "dest": "/src/order/login.html" },
    { "src": "/order/mypage", "dest": "/src/order/mypage.html" },
    { "src": "/order/reserve-success", "dest": "/src/order/reserve-success.html" },

    { "src": "/toss/success", "dest": "/src/public/toss-success.html" },
    { "src": "/toss/fail",   "dest": "/src/public/toss-fail.html" },

    { "src": "/api/(.*)", "dest": "/api/$1.js" }
  ]
}
